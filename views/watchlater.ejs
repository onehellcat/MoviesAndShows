<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet" />
    <link rel="stylesheet" href="../public/style.css" />
  </head>
  <body class="bg-gray-900 text-gray-100">
    <!-- Header -->
    <header class="bg-gray-800 shadow py-0 my-1">
      <%- include('../components/header'); %>
    </header>

    <div class="flex">
      <!-- Sidebar -->
      <aside
        class="bg-gray-800 text-gray-100 w-60 p-6 flex flex-col relative rounded-r-lg sidebar">
        <%- include('../components/sidebar'); %>
      </aside>

      <!-- Main content -->
      <main class="flex-1 bg-gray-900 p-6 overflow-y-auto">
        <div class="shadow rounded-lg p-6 min-h-full mr-3 ml-2">
          <div class="rounded-lg p-6 min-h-full mr-3 ml-2">
            <h2 class="text-2xl font-semibold text-gray-100">Watch Later</h2>
            <p class="mt-4 text-gray-300">
              Welcome to your Watchlater list
              <b id="username"><%=username%> !</b>
            </p>
          </div>

          <%- include('../components/watchlater'); %>
          <%-include('../components/watchlaterList'); %>
        </div>
      </main>
    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 shadow p-4 mt-1">
      <%- include('../components/footer'); %>
    </footer>
  </body>
</html>
